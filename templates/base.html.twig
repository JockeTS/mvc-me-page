<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Jocke's MVC {% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>
        <header class="site-header" style="background-image: url({{ asset('img/clouds.jpeg') }})">
            <span class="site-title">Jocke's MVC</span>
        </header>

        <nav>
            <a href="{{ path('home') }}">Home</a>
            <a href="{{ path('about') }}">About</a>
            <a href="{{ path('report') }}">Report</a>
            <a href="{{ path('lucky') }}">Lucky</a>
            <a href="{{ path('quote') }}">Quote</a>
            <a href="{{ path('card') }}">Card Game</a>
        </nav>

        <main>
            {% block body %}{% endblock %}
        </main>

        <div class="footer">
            <p>Made by Jocke T. Sj√∂lin</p>
        </div>
    </body>
</html>
